{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Landmarks in Austin</h1>
  <p>Austin, Texas boasts many unique and strange attractions, both historic and modern. </p>
  </article>
  <div class="row">
  {% for attraction in austin.landmarks %}
  <div class="col-sm-6 col-lg-4">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">{{ attraction.name }}</h5>
        <img src="../img/{{ attraction.image }}" class="img-fluid img-thumbnail" alt="Responsive Image">
        <p class="card-text">{{ attraction.location }}</p>
        <p class="card-text"> {{attraction.activities }} </p>
        <a href="{{ relative_path }}attractions/{{ attraction.slug}}.html" target="_blank">More Information</a>
        
      </div>
    </div>
  </div>
  {% endfor %}
  </div>

  
 <button type="button" class="btn btn-outline-info mt-4 btn-lg btn-block btn-secondary" data-toggle="collapse" data-target="#things" aria-expanded="true" aria-controls="things">Things To Do</button>
  <div class="row" id="things">
  {% for festivities in austin.activities %}
  <div class="col-sm-6 col-lg-4">
 
    <div class="card bg-secondary mb-2">
      <div class="card-body">
        <h5 class="card-title">{{ festivities.activity }}</h5>
        <p class="card-text">{{ festivities.date_time }}</p>
        <p class="card-text"> {{ festivities.address }} </p>
        <a href="{{ festivities.url }}" target="_blank">More Information</a>
        
      </div>
    </div>
  </div>
  {% endfor %}
</div>

{% endblock %}